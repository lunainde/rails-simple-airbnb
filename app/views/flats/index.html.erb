<h4> F L A T S </h4>
<br>
<%= link_to 'create new', new_flat_path, class: 'btn btn-success'%>
<br>
<div class="container mt-5">
  <% @flats.each do | flat | %>
    <h5><%= link_to flat.name, flat_path(flat) %></h5>
    <p><%= flat.address %></p>
    <p><%= flat.description %></p>
    <p><%= flat.price_per_night %></p>
    <p><%= flat.number_of_guests %></p>
  <% end %>
</div>
